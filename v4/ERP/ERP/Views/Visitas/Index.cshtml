@model IEnumerable<ERP.Models.Visita>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <a style="margin-top:3rem;margin-bottom:1rem" class="btn btn-primary" href="@Url.Action("Create","Visitas")"><i class="fas fa-plus"></i> Crear Nuevo</a>
    <table class="table table-striped border border-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa1.Nombre_Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado1.Nom_Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingeniero1.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoVisita.Nombre_Visita)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Costo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa1.Nombre_Empresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado1.Nom_Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingeniero1.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoVisita.Nombre_Visita)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Visitas",new { id=item.Folio })"><i class="fas fa-edit"></i>| </a>
                    <a href="@Url.Action("Details","Visitas",new { id=item.Folio })"><i class="fas fa-info"></i>| </a>
                    <a href="@Url.Action("Delete","Visitas",new { id=item.Folio })"><i class="fas fa-trash"></i> </a>

            </tr>
        }

    </table>
</body>
</html>